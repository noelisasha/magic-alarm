<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainActivity_MagicAlarm">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/materialToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#366695"
                android:minHeight="?attr/actionBarSize"
                android:layout_gravity="center"
                android:theme="?attr/actionBarTheme" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Magic Alarm"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#F7F2F8"
                android:textIsSelectable="true"
                android:textSize="34sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="Prueba"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="186dp"
                android:layout_height="264dp"
                android:contentDescription="wand img"
                app:srcCompat="@drawable/magic_wand_svgrepo_com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="165dp"
                android:layout_height="93dp"
                android:text="Selecciona la canción que más te guste:"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/dropdownSongs"
                android:layout_width="154dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/song_HarryPotter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harry Potter" />

                <RadioButton
                    android:id="@+id/song_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetris" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="174dp"
        android:layout_gravity="bottom|center_horizontal|fill_horizontal"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="0dp"
        android:textAlignment="center">

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="109dp"
            android:layout_height="79dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="CAMBIAR CANCIÓN"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSensores"
            android:layout_width="110dp"
            android:layout_height="78dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:text="SENSOR LUZ ANDROID"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSensores2"
            android:layout_width="137dp"
            android:layout_height="77dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="SENSOR LUZ ARDUINO"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>